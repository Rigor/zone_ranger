# -*- encoding: utf-8 -*-
lib = File.expand_path('../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)
require 'zone_ranger/version'

Gem::Specification.new do |gem|
  gem.name          = "zone_ranger"
  gem.version       = ZoneRanger::VERSION
  gem.authors       = ["Hubert Liu"]
  gem.email         = ["hubert.liu@rigor.com"]
  gem.description   = "Time Zone Ranger"
  gem.summary       = "Time Zone Ranger"
  gem.homepage      = "https://github.com/Rigor/zone_ranger"

  gem.files         = `git ls-files`.split($/)
  gem.executables   = gem.files.grep(%r{^bin/}).map{ |f| File.basename(f) }
  gem.test_files    = gem.files.grep(%r{^(test|spec|features)/})
  gem.require_paths = ["lib"]
  gem.add_dependency('active_support')
end